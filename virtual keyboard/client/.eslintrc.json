{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "strict": [
      1,
      "safe"
    ],
    "no-debugger": 1,
    "brace-style": [
      1,
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "no-trailing-spaces": 1,
    "keyword-spacing": 1,
    "space-before-function-paren": [
      1,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "spaced-comment": [
      1,
      "always"
    ],
    "no-undef": 1,
    "no-undefined": 1,
    "comma-dangle": [
      1,
      "never"
    ],
    "quotes": [
      1,
      "single"
    ],
    "semi": [
      1,
      "always"
    ],
    "valid-typeof": 1,
    "no-unused-vars": 1,
    "no-extra-semi": 1,
    "no-unreachable": 1,
    "no-unused-expressions": [
      1,
      {
        "allowTernary": true
      }
    ],
    "max-len": [
      0,
      120
    ]
  }
}